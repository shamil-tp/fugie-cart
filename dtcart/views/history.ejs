<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Payment History</title>

  <link rel="stylesheet" href="/style.css" />
  <link rel="stylesheet" href="/home.css" />

  <style>
    .history-container {
      padding: 1rem;
    }

    .history-title {
      font-size: 1.4rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .history-card {
      border: 1px solid var(--border-color);
      border-radius: 14px;
      padding: 1rem;
      margin-bottom: 1rem;
      background: #fff;
    }

    .history-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 0.6rem;
    }

    .history-date {
      font-size: 0.85rem;
      color: var(--text-secondary);
    }

    .history-amount {
      font-weight: 700;
      font-size: 1rem;
      color: var(--text-primary);
    }

    .items-list {
      border-top: 1px dashed var(--border-color);
      padding-top: 0.6rem;
      margin-top: 0.6rem;
    }

    .item-row {
      display: flex;
      justify-content: space-between;
      font-size: 0.9rem;
      margin-bottom: 0.35rem;
    }

    .item-name {
      color: var(--text-primary);
    }

    .item-price {
      color: var(--text-secondary);
      white-space: nowrap;
    }

    .empty-history {
      text-align: center;
      margin-top: 2rem;
      color: var(--text-secondary);
    }
  </style>
</head>

<body>
  <div class="mobile-container">

    <%- include('components/topBar', { user }) %>

    <div class="history-container">
      <h2 class="history-title">Purchase History</h2>

      <% if (purchases && purchases.length > 0) { %>
        <% purchases.forEach(purchase => { %>
          <div class="history-card">

            <!-- Header -->
            <div class="history-header">
              <span class="history-date">
                <%= purchase.date %>
              </span>
              <span class="history-amount">
                ₹<%= purchase.amount %>
              </span>
            </div>

            <!-- Items -->
            <div class="items-list">
              <% purchase.items.forEach(item => { %>
                <div class="item-row">
                  <span class="item-name">
                    <%= item.item %>
                  </span>
                  <span class="item-price">
                    <% const unitPrice = item.quantity > 0 ? (item.amount / item.quantity) : 0; %>
                    ₹<%= unitPrice %> × <%= item.quantity %> = <b>₹<%= item.amount %></b>
                  </span>
                </div>
              <% }) %>
            </div>
            
            <!-- <div style="font-size: 0.75rem; color: #94a3b8; margin-top: 8px; text-align: right;">
                Txn ID: <%= purchase.id || purchase._id %>
            </div> -->

          </div>
        <% }) %>
      <% } else { %>
        <p class="empty-history">No payment history found</p>
      <% } %>
    </div>

    <%- include('components/navbar', { page: 'history' }) %>
    
    <% if (typeof purchaseSuccess !== 'undefined' && purchaseSuccess) { %>
      <!-- Success Modal -->
      <div id="successModal" class="modal-overlay">
        <div class="modal-content">
          <div class="success-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </div>
          <h3>Purchase Success!</h3>
          <p>Your items have been ordered successfully.</p>
          <button class="modal-close-btn" onclick="closeModal()">Great!</button>
        </div>
      </div>

      <style>
        .modal-overlay {
          position: fixed;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: rgba(0, 0, 0, 0.5);
          display: flex;
          align-items: center;
          justify-content: center;
          z-index: 2000;
          backdrop-filter: blur(4px);
          animation: fadeIn 0.3s ease-out;
        }

        .modal-content {
          background: #fff;
          padding: 2rem;
          border-radius: 20px;
          text-align: center;
          width: 85%;
          max-width: 320px;
          box-shadow: 0 10px 25px rgba(0,0,0,0.1);
          transform: translateY(0);
          animation: slideUp 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .success-icon {
          width: 64px;
          height: 64px;
          background: #4bb543;
          color: white;
          border-radius: 50%;
          display: flex;
          align-items: center;
          justify-content: center;
          margin: 0 auto 1.5rem;
          box-shadow: 0 4px 12px rgba(75, 181, 67, 0.3);
        }

        .success-icon svg {
          width: 32px;
          height: 32px;
        }

        .modal-content h3 {
          margin: 0 0 0.5rem;
          color: var(--text-primary);
          font-size: 1.25rem;
        }

        .modal-content p {
          color: var(--text-secondary);
          margin-bottom: 1.5rem;
          font-size: 0.95rem;
        }

        .modal-close-btn {
          background: var(--primary-color, #007bff);
          color: white;
          border: none;
          padding: 0.8rem 2rem;
          border-radius: 12px;
          font-weight: 600;
          width: 100%;
          cursor: pointer;
        }

        @keyframes fadeIn {
          from { opacity: 0; }
          to { opacity: 1; }
        }

        @keyframes slideUp {
          from { transform: translateY(20px); opacity: 0; }
          to { transform: translateY(0); opacity: 1; }
        }
      </style>

      <script>
        function closeModal() {
          const modal = document.getElementById('successModal');
          modal.style.opacity = '0';
          modal.style.transition = 'opacity 0.3s ease';
          setTimeout(() => {
            modal.remove();
          }, 300);
        }
        
        // Auto-close after 5 seconds
        setTimeout(closeModal, 5000);
      </script>
    <% } %>

  </div>
</body>
</html>
