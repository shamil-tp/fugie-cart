<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Items List</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/home.css">
  <style>
    .modal.hidden {
      display: none;
    }

    .modal {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.4);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 999;
    }

    .modal-content {
      background: #fff;
      padding: 20px;
      border-radius: 12px;
      width: 90%;
      max-width: 320px;
    }

    /* Out of stock logic */
    .item-card.out-of-stock {
      opacity: 0.6;
      filter: grayscale(0.4);
      pointer-events: none;
    }
    
    .stock-out-badge {
      position: absolute;
      top: 10px;
      left: 10px;
      background: #ef4444;
      color: white;
      padding: 4px 10px;
      border-radius: 999px;
      font-size: 10px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      z-index: 2;
    }

    .item-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 4px;
    }

    .item-name {
      font-size: 0.95rem;
      font-weight: 600;
      color: #1e293b;
      margin: 0;
    }

    .stock-indicator {
      font-size: 0.75rem;
      background: #ecfdf5;
      color: #059669;
      padding: 3px 10px;
      border-radius: 20px;
      font-weight: 700;
      border: 1px solid #c0fbe4;
      text-transform: uppercase;
      letter-spacing: 0.02em;
    }

    .stock-out-text {
      color: #ef4444;
      font-size: 12px;
      font-weight: 600;
    }
  </style>
</head>

<body>
  <div class="mobile-container">
    <%- include('components/topBar', { user }) %>


    <h2 class="items-heading">Items</h2>


    <div class="items-grid">
      <% if (items && items.length > 0) { %>
      <% items.forEach(function(item) { %>
      <div class="item-card <%= item.quantity <= 0 ? 'out-of-stock' : '' %>" data-id="<%= item._id %>" data-stock="<%= item.quantity %>">
        <div class="item-image-container">
          <img src="<%= item.img || './images/pic_10.jpg' %>" alt="<%= item.name %>" class="item-image" onerror="this.src='./images/pic_10.jpg'">
          <% if (item.quantity <= 0) { %>
            <div class="stock-out-badge">Stock Out</div>
          <% } %>
        </div>
        <div class="item-details">
          <div class="item-header">
            <h3 class="item-name"><%= item.name %></h3>
            <span class="stock-indicator">Stock: <%= item.quantity %></span>
          </div>
          <p class="item-price">$<%= item.price.toFixed(2) %></p>
          <% if (item.quantity > 0) { %>
            <div class="quantity-controls">
              <button class="qty-btn minus" aria-label="Decrease quantity">-</button>
              <span class="qty-value">
                <%= cart.items[item._id]?.quantity || 0 %>
              </span>
              <button class="qty-btn plus" aria-label="Increase quantity">+</button>
            </div>
          <% } else { %>
            <p class="stock-out-text">Unavailable</p>
          <% } %>
        </div>

      </div>

      <% }); %>
      <!-- Request Item Card -->
      <div class="item-card request-card" onclick="window.location.href='/items/request'">
        <div class="request-card-inner">
          <div class="request-icon">âž•</div>
          <p class="request-text">Request an Item</p>
        </div>
      </div>

      <% } else { %>
      <p>No items found.</p>
      <% } %>
    </div>

    <%- include('components/navbar', { page: 'home' }) %>
  </div>

  <button id="buyFab" class="buy-fab hidden" onclick="window.location.href='/cart'">
    ðŸ›’ Buy
  </button>


  <div id="nameModal" class="modal hidden">
    <div class="modal-content">
      <h2>Welcome ðŸ‘‹</h2>
      <p>Please enter your name</p>
      <input type="text" id="nameInput" placeholder="Your name" />
      <button id="saveNameBtn">Save</button>
    </div>
  </div>

  <div class="desktop-message">
    <p>This application is only available on mobile devices.</p>
  </div>
<script>
  const needsName = <%= user.name ? 'false' : 'true' %>;

  if (needsName) {
    document.getElementById('nameModal').classList.remove('hidden');
  }

  document.getElementById('saveNameBtn')?.addEventListener('click', async () => {
    const name = document.getElementById('nameInput').value.trim();
    if (!name) return alert('Please enter your name');

    const res = await fetch('/auth/save-name', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ name })
    });

    const data = await res.json();
    if (data.success) {
      document.querySelector('.username').textContent = data.name;
      document.getElementById('nameModal').classList.add('hidden');
    }
  });

  const buyFab = document.getElementById('buyFab');
  let cartQueue = Promise.resolve(); // ðŸ”„ Sequential request queue (Silent)

  // ðŸ”¢ Calculate initial cart count from server-rendered values
  let cartCount = 0;
  document.querySelectorAll('.qty-value').forEach(qty => {
    cartCount += parseInt(qty.textContent) || 0;
  });

  // Show FAB if page loads with items
  if (cartCount > 0) {
    buyFab.classList.remove('hidden');
  }

  document.querySelectorAll('.item-card').forEach(card => {
    const itemId = card.dataset.id;
    const maxStock = parseInt(card.dataset.stock) || 0; // ðŸ‘ˆ Get max stock
    const plusBtn = card.querySelector('.plus');
    const minusBtn = card.querySelector('.minus');
    const qtySpan = card.querySelector('.qty-value');

    // If item is out of stock, these won't exist
    if (!plusBtn || !minusBtn || !qtySpan) return;

    let quantity = parseInt(qtySpan.textContent) || 0;

    plusBtn.addEventListener('click', () => {
      // ðŸ›‘ Check current quantity against stock
      if (quantity >= maxStock) {
        alert("Cannot add more! Out of stock.");
        return;
      }

      quantity++;
      cartCount++;

      qtySpan.textContent = quantity;
      buyFab.classList.remove('hidden'); // âœ… fade in

      // ðŸ“¥ Queue the request silently
      cartQueue = cartQueue.then(() => 
        fetch('/cart/add', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ itemId, qty: 1 })
        })
      ).catch(err => console.error("Sync error:", err));
    });

    minusBtn.addEventListener('click', () => {
      if (quantity > 0) {
        quantity--;
        cartCount--;

        qtySpan.textContent = quantity;

        // âœ… Fade out when cart becomes empty
        if (cartCount === 0) {
          buyFab.classList.add('hidden');
        }

        // ðŸ“¥ Queue the request silently
        cartQueue = cartQueue.then(() => 
          fetch('/cart/add', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ itemId, qty: -1 })
          })
        ).catch(err => console.error("Sync error:", err));
      }
    });
  });
</script>


</body>

</html>