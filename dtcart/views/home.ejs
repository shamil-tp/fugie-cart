<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Items List</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/home.css">
</head>

<body>
  <div class="mobile-container">
    <header class="top-bar">
      <div class="user-greeting">
        <p class="hello">Hello,</p>
        <h1 class="username"><%= user.name %></h1>
      </div>

      <div class="coin-balance">
        <span class="coin-icon">ðŸª™</span>
        <span class="coin-count"><%= user.balance %></span>
      </div>
    </header>

    <h2 class="items-heading">Items</h2>


    <div class="items-grid">
      <% if (items && items.length > 0) { %>
      <% items.forEach(function(item) { %>
      <div class="item-card" data-id="<%= item._id %>">
        <div class="item-image-container">
          <img src="<%= item.img || './images/pic_10.jpg' %>" alt="<%= item.name %>" class="item-image" onerror="this.src='./images/pic_10.jpg'">
        </div>
        <div class="item-details">
          <h3 class="item-name"><%= item.name %></h3>
          <p class="item-price">$<%= item.price.toFixed(2) %></p>
          <div class="quantity-controls">
            <button class="qty-btn minus" aria-label="Decrease quantity">-</button>
            <span class="qty-value">
              <%= cart.items[item._id]?.quantity || 0 %>
            </span>
            <button class="qty-btn plus" aria-label="Increase quantity">+</button>
          </div>
        </div>

      </div>

      <% }); %>
      <!-- Request Item Card -->
      <div class="item-card request-card" onclick="window.location.href='/items/request'">
        <div class="request-card-inner">
          <div class="request-icon">âž•</div>
          <p class="request-text">Request an Item</p>
        </div>
      </div>

      <% } else { %>
      <p>No items found.</p>
      <% } %>
    </div>

    <%- include('components/navbar', { page: 'home' }) %>
  </div>

  <div class="desktop-message">
    <p>This application is only available on mobile devices.</p>
  </div>
<script>
document.querySelectorAll('.item-card').forEach(card => {
  const itemId = card.dataset.id;
  const plusBtn = card.querySelector('.plus');
  const minusBtn = card.querySelector('.minus');
  const qtySpan = card.querySelector('.qty-value');

  let quantity = parseInt(qtySpan.textContent) || 0; // âœ… sync from server

  plusBtn.addEventListener('click', async () => {
    quantity++;
    qtySpan.textContent = quantity;

    await fetch('/cart/add', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ itemId, qty: 1 })
    });
  });

  minusBtn.addEventListener('click', async () => {
    if (quantity > 0) {
      quantity--;
      qtySpan.textContent = quantity;

      await fetch('/cart/add', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ itemId, qty: -1 })
      });
    }
  });
});
</script>


</body>

</html>