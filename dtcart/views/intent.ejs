<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Redirecting to UPI...</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <style>
    body {
      background-color: #f0f4f8;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
      font-family: 'Inter', sans-serif;
    }
    .intent-card {
      background: white;
      padding: 2.5rem;
      border-radius: 24px;
      text-align: center;
      width: 90%;
      max-width: 360px;
      box-shadow: 0 20px 40px rgba(0,0,0,0.06);
      animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }
    .loader-container {
      margin-bottom: 2rem;
      position: relative;
      display: flex;
      justify-content: center;
    }
    .loader {
      border: 4px solid #f3f3f3;
      border-top: 4px solid #2563eb;
      border-radius: 50%;
      width: 48px;
      height: 48px;
      animation: spin 1s linear infinite;
    }
    .intent-amount {
      font-size: 2.5rem;
      font-weight: 800;
      color: #0f172a;
      margin: 0.5rem 0;
    }
    .intent-label {
      font-size: 0.875rem;
      color: #64748b;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    .recipient-chip {
      display: inline-flex;
      align-items: center;
      background: #f1f5f9;
      padding: 0.5rem 1rem;
      border-radius: 999px;
      margin-top: 1.5rem;
      font-size: 0.9rem;
      color: #334155;
      font-weight: 600;
    }
    .redirecting-text {
      margin-top: 2.5rem;
      font-size: 0.95rem;
      color: #475569;
    }
    .manual-btn {
      margin-top: 1.5rem;
      background: #2563eb;
      color: white;
      border: none;
      padding: 1rem 2rem;
      border-radius: 14px;
      font-weight: 600;
      width: 100%;
      cursor: pointer;
      box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    @keyframes slideUp {
      from { transform: translateY(30px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
  </style>
</head>
<body>
  <div class="intent-card">
    <div class="loader-container">
      <div class="loader"></div>
    </div>
    
    <span class="intent-label">Payment Amount</span>
    <h1 class="intent-amount">â‚¹ Any</h1>
    
    <div class="recipient-chip">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" preserveAspectRatio="xMidYMid meet" style="margin-right:8px">
        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
        <circle cx="12" cy="7" r="4"></circle>
      </svg>
      To: Sinan
    </div>

    <p class="redirecting-text">Redirecting to your UPI app...</p>
    
    <button class="manual-btn" onclick="startUpiPayment()">Open UPI App Now</button>
  </div>

  <script>
    function startUpiPayment() {
      const upiId = '7306313116@superyes';
      const name = 'Sinan';
      const txnNote = 'DT Cart Recharge';

      const upiUrl =
        `upi://pay?pa=${upiId}` +
        `&pn=${encodeURIComponent(name)}` +
        `&cu=INR` +
        `&tn=${encodeURIComponent(txnNote)}`;

      window.location.href = upiUrl;
    }

    // Auto-trigger after 1.5 seconds
    setTimeout(startUpiPayment, 1500);
  </script>
</body>
</html>
